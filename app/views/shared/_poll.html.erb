<% if @poll -%>
<% form_for @user_poll_option, :url => root_url do |upo| -%>
<%= @poll.description %><br />
<% @poll.poll_options.sort_by { |po| po.id }.each do |poll_option| %>
<%= radio_button "user_poll_option", "poll_option_id", poll_option.id, @current_user_vote && @current_user_vote.id == poll_option.id ? { 'checked' => 'checked'} : {} %> <%= poll_option.value %><br />
<% end -%>
<%= submit_tag t("submit") %>
<% end -%>
<% end -%>
